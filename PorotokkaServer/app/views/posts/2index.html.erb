<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
  <link rel="stylesheet" type = "text/css" href="stylesheets/postsFormat.css"/>
	
    <title>Calendar</title>
  </head>
<body>

<div class="container">
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addModal">
  Add Appointment
</button>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#listModal">
  List Appointments
</button>
</div>


<!-- The myModal -->
<div class="modal" id="addModal">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Add New Appoinment</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
       <%= bootstrap_form_for(@post) do |f| %>
        <div class="modal-body">
		
            <%= f.text_field :event_name %>
            <%= f.date_field :event_date %>
            <%= f.time_field :event_time %>
            
        <div class="modal-footer">
            <%= f.submit "Save Changes" %>
           
        </div>
		</div> 
    <% end %>
    </div>
  </div>
</div> <!--myModal -->







<script>
function setFormAction(action) {
document.getElementById("formList").action = action;
}
</script>	
  </body>
</html>